<%- include ('partials/header.ejs') %> 
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container" id="formulario-pergunta">
        <div class="card">
            <div class="card-header">
               <h3> Realizar pergunta </h3>
            </div>
            <div class="card-body">
                <form action="/salvar-pergunta" method="POST">
                    <label for="titulo" class="required">Título</label>
                    <input required type="text" id="titulo" name="titulo" placeholder="Título" class="form-control">
                    <label for="descricao" class="mt-2 required" required>Descrição</label>
                    <textarea required placeholder="Descreva sua pergunta aqui" name="descricao" class="form-control" id="descricao"></textarea>
                    <button type="submit" class="btn btn-aqua mt-3 float-right">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ('partials/bootstrap-script-import.ejs') %> 

